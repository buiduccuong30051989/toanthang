            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
              +category-box('Bình nước nóng', 'category.html', 'images/category-binh-nuoc-nong.png', '', '', false)
            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
              +category-box('Bình nước nóng', 'category.html', 'images/category-binh-nuoc-nong.png', '', '', false)

    +footer()

