          .row
            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
              +category-box('Sản phẩm nổi bật', 'category.html', 'images/category-may-nang-luong.png', '', '', false)
            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
              +category-box('Bồn nước Inox', 'category.html', 'images/category-bon-nuoc-inox.png', '', '', false)
            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
              +category-box('Chậu rửa Inox', 'category.html', 'images/category-chau-rua-inox.png', '', '', false)
            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
              +category-box('Bồn nhựa cao cấp', 'category.html', 'images/category-bon-nhua-cao-cap.png', '', '', false)
            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
              +category-box('Máy lọc nước', 'category.html', 'images/category-may-loc-nuoc.png', '', '', false)
            .xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4.mb-30
