// Category image
mixin category-featured-image(img, name, content, align)
  div(class=align ? 'featured-image ' + align + ' clearfix' : 'featured-image clearfix')
    if img
      img.img-responsive(src=img, alt="")
    if name || content
      .container
        .featured-image-container
          .featured-image-content
            if name
              h2= name
            if content
              .category-info
                p
                  strong Công nghệ 
                  | ép liền khối, không hàn mài, không mối ghép.
                  strong Xiphon 
                  | ngăn khử mùi thông minh
                  strong Công nghệ 
                  | đánh bóng bề mặt giúp tăng độ bóng sản phẩm khả năng
                  strong siêu chống ồn
                  strong Thân thiện 
                  | với môi trường

// Category Box
mixin category-box(name, url, img, cl, content, enable_url_name)
  div(class=cl != '' ? 'category-item ' + cl : 'category-item')
    if name
      h2.category-name.title-one
        if enable_url_name
          a(href=url)
            span= name
        else
          span= name
    if img
      .category-image
        a(href=url)
          img.img-responsive(src=img, alt="")
    if content
      .category-info= content

// Product Box
mixin product-box(name, url, img, attr1, attr2)
  .product.xs-full.col-xs-6.col-sm-6.col-md-4.col-lg-4
    .product-inner
      if img
        a(class='product-image', href=url)
          img.img-responsive(src=img, alt="")
      if name || content
        .product-content
          if name
            h4.product-name
              a(href=url)= name
          if attr1 || attr2
            .product-info
              span= attr1
              span= attr2